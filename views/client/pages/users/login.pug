extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
block main 
    .container.my-3
        .row.justify-content-center  
            .col-6.login
                h2(class="text-center") Đăng nhập tài khoản
                form(
                    action = "/users/login"
                    method = "POST"
                )
                    div(class="form-group")
                        label(for="email") Email     
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                        )
                    div(class="form-group")
                        label(for="password") Password    
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                        )
                    div(class="form-group mt-3")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                    ) Đăng nhập