extends ../../layouts/default.pug 
include ../../mixins/box-head.pug
block main 
    .container.my-3
        .row.justify-content-center  
            .col-6.register 
                h2(class="text-center") Đăng ký tài khoản
                form(
                    action = "/users/register"
                    method = "POST"
                    form-checkbox
                )
                    div(class="form-group")
                        label(for="fullName") Họ và tên     
                        input(
                            type="text"
                            class="form-control"
                            id="fullName"
                            name="fullName"
                        )
                    div(class="form-group")
                        label(for="email") Email     
                        input(
                            type="text"
                            class="form-control"
                            id="email"
                            name="email"
                        )
                    div(class="form-group")
                        label(for="password") Password    
                        input(
                            type="password"
                            class="form-control"
                            id="password"
                            name="password"
                        )
                    div(class="form-group")
                        label(for="re-password") Nhập lại Password    
                        input(
                            type="password"
                            class="form-control"
                            id="re-password"
                            name="rePassword"
                        )
                    div(class="form-check")
                        input(
                            class="form-check-input " 
                            type="checkbox" value="" 
                            id="checkbox"
                            style="cursor: pointer"
                        )
                        label(
                            class="form-check-label" 
                            for="checkbox"
                            style="cursor: pointer"
                        ) Hiển thị mật khẩu

                    div(class="form-group mt-3")
                        button(
                            type="submit"
                            class="btn btn-primary btn-block"
                    ) Đăng ký